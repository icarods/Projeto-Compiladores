Package simpleAdder; 
     
Tokens   
    digit = ['0' .. '9'];
   	number = [0 .. 9];
   	letter = [['a' .. 'z']+['A' .. 'Z']];
     
    
Tokens
	id = letter(letter|digit)*;
	if = 'if';
	while = 'while';
	plus = '+';
 	minus = '-';
 	mult = '*';
 	div = '/';
 	mod = '%';
 	l_par = '(';
 	r_par = ')';
	
	
